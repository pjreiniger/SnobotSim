<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>


<GridPane hgap="10" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.snobot.simulator.gui.widgets.EncoderWidgetController">

    <Button onAction="#openSettings" GridPane.columnIndex="0" GridPane.rowIndex="0">
      <graphic>
        <ImageView  pickOnBounds="true" preserveRatio="true">
          <image>
            <Image url="/com/snobot/simulator/gui/widgets/gear.png" />
          </image>
        </ImageView>
      </graphic>
    </Button>

    <Label fx:id="mLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <TextField fx:id="mDistanceField" GridPane.columnIndex="2" GridPane.rowIndex="0" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints percentWidth="40.0" />
      <ColumnConstraints />
   </columnConstraints>

</GridPane>
