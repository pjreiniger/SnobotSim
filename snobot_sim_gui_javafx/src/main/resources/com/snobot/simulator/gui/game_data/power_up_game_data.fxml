<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>

<TitledPane text="Game Data" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.snobot.simulator.gui.game_data.PowerUpGameDataController">
   <GridPane >
      <children>
         <Label text="Game Data" />
         <Label text="Match Number" GridPane.rowIndex="1" />
         <Label text="Match Type" GridPane.rowIndex="2" />
         <Label text="Event Name" GridPane.rowIndex="3" />
         <ComboBox fx:id="mMatchType" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#handleUpdate" />
         <TextField fx:id="mMatchNumber" GridPane.columnIndex="1" GridPane.rowIndex="1" text="1" />
         <TextField fx:id="mEventName" GridPane.columnIndex="1" GridPane.rowIndex="3" text="Testing Event"/>
         <ComboBox fx:id="mGameData" GridPane.columnIndex="1" >
            <items>
              <FXCollections fx:factory="observableArrayList">
                <String fx:value="LLL" />
                <String fx:value="LRL" />
                <String fx:value="RLR" />
                <String fx:value="RRR" />
              </FXCollections>
            </items>
         </ComboBox>
      </children>
   </GridPane>
</TitledPane>
